<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/txt_view_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="100dp"
            android:text="@string/address"
            android:textColor="@android:color/background_dark"
            android:layout_weight="0.14" />

        <TextView
            android:id="@+id/txt_view_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="100dp"
            android:layout_weight="0.81"
            android:text="@string/photoschoppe_address"
            android:textColor="@android:color/background_dark"
            android:allowUndo="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/txt_view_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/phone_no"
            android:textColor="@android:color/background_dark"
            android:layout_weight="0.04" />

        <TextView
            android:id="@+id/txt_view_phone_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/photoschoppe_phone_no"
            android:layout_weight="0.45"
            android:textColor="@android:color/background_dark"
            android:autoLink="phone"
            android:allowUndo="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/CA_txt_view_email"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/email"
            android:textColor="@android:color/background_dark"
            android:layout_weight="0.02" />

        <TextView
            android:id="@+id/txt_view_email_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_weight="0.04"
            android:text="@string/photoschoppe_email"
            android:textColor="@android:color/background_dark"
            android:autoLink="email" />
    </LinearLayout>

    <Button
        android:text="@string/view_location_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_view_location"
        android:background="@color/colorPrimary"
        android:onClick="loadMap"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/background_dark" />

</LinearLayout>